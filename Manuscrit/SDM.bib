	keywords = {SDM},
	pages = {839279},
	file = {Very High Resolution Species Distribution Modeling Based on Remote Sensing Imagery_ How to Capture Fine-Grained and Large-Scale Vegetation Ecology With Convolutional Neural Networks.pdf:/home/hetier/Documents/Bibliographie/Article/Very High Resolution Species Distribution Modeling Based on Remote Sensing Imagery_ How to Capture Fine-Grained and Large-Scale Vegetation Ecology With Convolutional Neural Networks.pdf:application/pdf},
