	number = {1},
	urldate = {2023-12-19},
	journal = {Malaria Journal},
	author = {Ayala, Diego and Costantini, Carlo and Ose, Kenji and Kamdem, Guy C and Antonio-Nkondjio, Christophe and Agbor, Jean-Pierre and Awono-Ambene, Parfait and Fontenille, Didier and Simard, Frédéric},
	month = dec,
	year = {2009},
	keywords = {anopheles, SDM},
	pages = {307},
	file = {Habitat suitability and ecological niche profile of major malaria.pdf:/home/hetier/Documents/Bibliographie/Article/Habitat suitability and ecological niche profile of major malaria.pdf:application/pdf},
}

@article{phillips_maximum_2006,
	title = {Maximum entropy modeling of species geographic distributions},
	volume = {190},
